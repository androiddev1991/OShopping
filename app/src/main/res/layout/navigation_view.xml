<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:id="@+id/header_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">

        <ImageView
            android:id="@+id/nav_UserTopBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/header" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:scaleType="centerCrop"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/nav_UserProfilePic"
                android:src="@drawable/login_image"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom|left"
                android:layout_centerHorizontal="true">
            </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nav_txtUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:text="androiddev1991@gmail.com"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="0.20"
            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/nav_Modiriat_visibility"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:onClick="openAcountManager"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_supervisor_account_black_24dp"

                    />

                <TextView
                    android:id="@+id/tvlstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/img"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="10dp"

                    android:text="مدیریت حساب"
                    android:textColor="#565656"
                    android:textSize="18dp"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:onClick="onclick_AboutUS"
                android:background="@android:color/transparent"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="6dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_info_black_24dp"

                    />

                <TextView
                    android:id="@+id/tvlstName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/img1"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="10dp"

                    android:text="درباره ما"
                    android:textColor="#565656"
                    android:textSize="18dp"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:onClick="openTouristActivity"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_contact_mail_black_24dp" />

                <TextView
                    android:id="@+id/tvlstName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/img2"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:text="تماس با ما"

                    android:textColor="#565656"
                    android:textSize="18dp"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:onClick="exitApp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_exit_to_app_black_24dp"

                    />

                <TextView
                    android:id="@+id/tvlstName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/img4"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:text="خروج"

                    android:textColor="#565656"
                    android:textSize="18dp"

                    />
            </RelativeLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
