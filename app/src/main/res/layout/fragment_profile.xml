<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_margin="15dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            tools:context=".Fragment.UserProfile.FragmentProfile">


            <!-- TODO: Update blank fragment layout -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtUserLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#5f5f5f">

                <EditText
                    android:id="@+id/txtname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:gravity="right"
                    android:hint="نام"
                    android:textAlignment="gravity"
                    android:textColor="#5f5f5f" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtLastLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5f5f5f"
                android:textColorHint="#5f5f5f">

                <EditText
                    android:id="@+id/txtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:gravity="right"
                    android:hint="نام خانوادگی"
                    android:textAlignment="gravity"
                    android:textColor="#5f5f5f" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5f5f5f"
                android:textColorHint="#5f5f5f">

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:enabled="false"
                    android:gravity="right"
                    android:hint="ایمیل"
                    android:textAlignment="gravity"
                    android:textColor="#5f5f5f" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtPw1Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5f5f5f"
                android:textColorHint="#5f5f5f">

                <EditText
                    android:id="@+id/txtPw1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:enabled="false"
                    android:gravity="right"
                    android:hint="پسورد"
                    android:inputType="textPassword"
                    android:textAlignment="gravity"
                    android:textColor="#5f5f5f" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtPw2Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5f5f5f"
                android:textColorHint="#5f5f5f">

                <EditText
                    android:id="@+id/txtPw2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:enabled="false"
                    android:gravity="right"
                    android:hint="تکرار پسورد"
                    android:inputType="textPassword"
                    android:textAlignment="gravity"
                    android:textColor="#5f5f5f" />
            </android.support.design.widget.TextInputLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:onClick="PickDate"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Datepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/05/1991"
                    android:textSize="20dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="تاریخ تولد:"
                    android:textAlignment="gravity"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="20dp"
                    android:id="@+id/txtGene"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="جنسیت:"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    />
                <RadioGroup
                    android:id="@+id/groupGen"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtGene"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rbwoman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="زن"
                        />
                    <RadioButton
                        android:id="@+id/rbMan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مرد"
                        />
                </RadioGroup>

            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtFavLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5f5f5f"
                android:textColorHint="#5f5f5f">

                <EditText
                    android:id="@+id/txtFavFilm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:enabled="false"
                    android:gravity="right"

                    android:hint="فیلم های مورد علاقه:"
                    android:textAlignment="gravity"
                    android:textColor="#5f5f5f" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtFavLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5f5f5f"
                android:textColorHint="#5f5f5f">

                <EditText
                    android:id="@+id/txtFavcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:enabled="false"
                    android:gravity="right"

                    android:hint="رنگ مورد علاقه:"
                    android:textAlignment="gravity"
                    android:textColor="#5f5f5f" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtFavLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#5f5f5f"
                android:textColorHint="#5f5f5f">

                <EditText
                    android:id="@+id/txtAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:enabled="false"
                    android:gravity="right"

                    android:hint="درباره من:"
                    android:textAlignment="gravity"
                    android:textColor="#5f5f5f" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:onClick="onClick_profileImage"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/frProfileImage"
                android:scaleType="centerCrop"
                android:background="@drawable/non"
                android:layout_gravity="center_horizontal|center_vertical"
                />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSendUser"

                android:src="@drawable/ic_mode_edit_white_24dp"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_margin="20dp"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
</android.support.v4.widget.NestedScrollView>

